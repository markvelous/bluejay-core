{
  "name": "@bluejayfinance/app-vault",
  "version": "0.1.3",
  "private": true,
  "dependencies": {
    "@bluejayfinance/contracts": "^0.1.3",
    "@craco/craco": "^6.2.0",
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@headlessui/react": "^1.4.0",
    "@heroicons/react": "^1.0.4",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "@usedapp/core": "^0.4.7",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.6",
    "flagged": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-use-localstorage": "^3.5.3",
    "use-http": "^1.0.24"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/prompt": "^13.1.0",
    "@ls-age/commitlint-circle": "^1.0.0",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addons": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "commitizen": "^4.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testcafe-community": "^1.1.0",
    "eslint-plugin-testing-library": "^4.11.0",
    "git-cz": "^4.7.6",
    "http-server": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "prettier": "^2.3.2",
    "react-scripts": "4.0.3",
    "tailwindcss": "^2.2.7",
    "testcafe": "1.15.3",
    "typescript": "~4.3.5"
  },
  "scripts": {
    "build": "NODE_ENV=production npm-run-all -s build:css build:js",
    "build:css": "postcss src/tailwind.css -o src/index.css",
    "build:js": "react-scripts build",
    "commit": "git-cz",
    "commit:retry": "npm run commit -- --retry",
    "eject": "react-scripts eject",
    "integration": "testcafe chrome integration/**/*.spec.ts --ts-config-path ./tsconfig.testcafe.json --app \"BROWSER=none npm run start\"",
    "integration:headless": "testcafe chrome:headless integration/**/*.spec.ts --ts-config-path ./tsconfig.testcafe.json --app \"http-server ./build --port 3000\" --app-init-delay 5000",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm-run-all -p start:*",
    "start:css": "postcss src/tailwind.css -o src/index.css --watch",
    "start:js": "sleep 2 && react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "npm run build:css && build-storybook -s public",
    "test": "react-scripts test",
    "deploy:local": "cd ../contracts && hh deployInfrastructure --deployment-cache ../app-vault/src/fixtures/deployment/contracts.json --transaction-cache ../app-vault/src/fixtures/deployment/transactions.json --network local",
    "deploy:staging": "cd ../contracts && hh deployInfrastructure --deployment-cache ../app-vault/src/fixtures/deployment/contracts.json --transaction-cache ../app-vault/src/fixtures/deployment/transactions.json --network staging",
    "debug:local": "cd ../contracts && hh debugInfrastructure --deployment-cache ../app-vault/src/fixtures/deployment/contracts.json --transaction-cache ../app-vault/src/fixtures/deployment/transactions.json --network local",
    "debug:staging": "cd ../contracts && hh debugInfrastructure --deployment-cache ../app-vault/src/fixtures/deployment/contracts.json --transaction-cache ../app-vault/src/fixtures/deployment/transactions.json --network staging"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:import/typescript",
      "prettier",
      "plugin:testing-library/react"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "import",
      "react",
      "@typescript-eslint",
      "react-hooks",
      "testing-library"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "array-callback-return": "warn",
      "import/no-default-export": "error",
      "import/no-unresolved": 2,
      "jest/no-hooks": 0,
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "react/no-unescaped-entities": [
        "error",
        {
          "forbid": [
            ">",
            "}",
            "\""
          ]
        }
      ],
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "react-hooks/exhaustive-deps": "error",
      "react-hooks/rules-of-hooks": "error"
    },
    "overrides": [
      {
        "files": [
          "./**/*.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      },
      {
        "files": [
          "./**/*.stories.tsx"
        ],
        "rules": {
          "import/no-default-export": "off",
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      },
      {
        "files": [
          "*.test.ts",
          "*.test.tsx"
        ],
        "extends": [
          "plugin:jest/all"
        ],
        "rules": {
          "jest/prefer-expect-assertions": "off"
        }
      },
      {
        "files": [
          "*.spec.ts",
          "*.spec.tsx"
        ],
        "plugins": [
          "testcafe-community"
        ],
        "extends": "plugin:testcafe-community/recommended"
      }
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
